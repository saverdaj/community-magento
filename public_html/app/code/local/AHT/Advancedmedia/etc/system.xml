<?xml version="1.0"?>
<config>
    <tabs>
        <aht>
            <label>AHT Modules</label>
            <sort_order>10</sort_order>
        </aht>
    </tabs>
    <sections>
		<advancedmedia module="advancedmedia">
			<label>Product Videos</label>
            <tab>aht</tab>
            <frontend_type>text</frontend_type>
            <sort_order>1</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
			<groups>
				<general translate="label">
                    <label>General config</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>1</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
						<enabled translate="label">
							<label>is Enabled</label>
							<frontend_type>select</frontend_type>
							<source_model>adminhtml/system_config_source_yesno</source_model>
							<comment><![CDATA[Enable Product Video]]></comment>
							<sort_order>0</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
						</enabled>
						<use_lightbox translate="label">
							<label>Use Lightbox</label>
							<frontend_type>select</frontend_type>
							<source_model>adminhtml/system_config_source_yesno</source_model>
							<comment><![CDATA[Enable Lightbox of Product Images]]></comment>
							<sort_order>2</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
						</use_lightbox>
						<width translate="label">
                            <label>Width</label>
                            <frontend_type>text</frontend_type>
							<comment><![CDATA[Width of Main Image. Default:265px]]></comment>
                            <sort_order>3</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </width>
						<height translate="label">
                            <label>Height</label>
                            <frontend_type>text</frontend_type>
							<comment><![CDATA[Height of Main Image. Default:265px]]></comment>
                            <sort_order>4</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </height>
                    </fields>
                </general>
				<lightbox>
					<label>Lightbox</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>3</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
					<fields>
						<width translate="label">
                            <label>Width</label>
                            <frontend_type>text</frontend_type>
							<comment><![CDATA[Width of image in lightbox]]></comment>
                            <sort_order>0</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </width>
						<height translate="label">
                            <label>Height</label>
                            <frontend_type>text</frontend_type>
							<comment><![CDATA[Height of image in lightbox]]></comment>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </height>
						<allow_video_lightbox translate="label">
							<label>is Enabled</label>
							<frontend_type>select</frontend_type>
							<source_model>adminhtml/system_config_source_yesno</source_model>
							<sort_order>2</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
						</allow_video_lightbox>
					</fields>
				</lightbox>
				<thumbnail>
					<label>Thumbnail</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>4</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
					<fields>
						<width translate="label">
                            <label>Width</label>
                            <frontend_type>text</frontend_type>
							<comment><![CDATA[Width of image in lightbox]]></comment>
                            <sort_order>0</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </width>
						<height translate="label">
                            <label>Height</label>
                            <frontend_type>text</frontend_type>
							<comment><![CDATA[Height of image in lightbox]]></comment>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </height>
						<video_thumbnail>
							<label>Video Thumbnail</label>
							<comment>Allowed file types: jpeg, gif, png.</comment>
							<frontend_type>image</frontend_type>
							<backend_model>adminhtml/system_config_backend_image</backend_model>
							<upload_dir config="system/filesystem/media" scope_info="1">advancedmedia</upload_dir>
							<base_url type="media" scope_info="1">advancedmedia</base_url>
							<sort_order>2</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
						</video_thumbnail>
						<slide_of_thumbnail translate="label">
							<label>Slide Of Thumbnail</label>
							<frontend_type>select</frontend_type>
							<comment><![CDATA[Enable slide show images]]></comment>
							<source_model>adminhtml/system_config_source_yesno</source_model>
							<sort_order>3</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
						</slide_of_thumbnail>
						<visible translate="label">
                            <label>Visible</label>
                            <frontend_type>text</frontend_type>
							<validate>validate-number</validate>
							<comment><![CDATA[Number images in slide]]></comment>
                            <sort_order>4</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </visible>
					</fields>
				</thumbnail>
			</groups>
		</advancedmedia>
	</sections>
</config>